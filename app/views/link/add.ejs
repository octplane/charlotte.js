<% var title = 'Add a new link' %>
<% include ../head %>
    <form class='add-form1' method="POST" action='/add'>
        <div class="metal padded">
            <h1>Add a new link</h1>
            <div class="row">
                <div class="half">
                    <h3>URL</h3>
                </div>
                <div class="half">
                    <h3>Title</h3>
                </div>
            </div>
            <div class="row">
                <div class="it half button-right">
                    <input name="url" class="erasable" type="text" placeholder="http://" value="<%= url %>" />
                    <button type="button" class="te"></button>
                </div>
                <div class="it half button-right">
                    <input name="title" class="erasable" type="text" placeholder="page title" value="<%= url_title %>" />
                    <button type="button" class="te"></button>
                </div>
            </div>
            <div class="row button-row-right">
                <button class="btn green" type="submit">Add Link</button>
            </div>
        </div>
      </form>

<% include ../foot %>